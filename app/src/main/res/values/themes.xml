<resources>

    <style name="Theme.EcoCrafters" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:buttonStyle">@style/Theme.EcoCrafters.Button</item>
        <item name="toolbarStyle">@style/Theme.EcoCrafters.ToolBar</item>
        <item name="background">@android:color/background_light</item>
    </style>

    <style name="Theme.EcoCrafters.Button" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/motiva_sans_bold</item>
    </style>


    <style name="Theme.EcoCrafters.ToolBar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?colorSurfaceVariant</item>
        <item name="android:textColorPrimary">?colorOnSurfaceVariant</item>
        <item name="colorControlNormal">?colorOnSurfaceVariant</item>
    </style>

    <style name="Theme.EcoCrafters.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/motiva_sans_font</item>
    </style>

    <style name="Theme.EcoCrafters.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/motiva_sans_medium</item>
    </style>

    <style name="Theme.EcoCrafters.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/motiva_sans_medium</item>
    </style>

    <style name="Theme.EcoCrafters.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/poppins_font</item>
    </style>

    <style name="Theme.EcoCrafters.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/poppins_font</item>
    </style>

    <style name="Theme.EcoCrafters.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/poppins_font</item>
    </style>

    <style name="Theme.EcoCrafters.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Theme.EcoCrafters.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Theme.EcoCrafters.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Theme.EcoCrafters.StartingTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:buttonStyle">@style/Theme.EcoCrafters.Button</item>
        <item name="toolbarStyle">@style/Theme.EcoCrafters.ToolBar</item>
        <item name="background">@color/primary_green</item>
        <item name="colorOnBackground">@color/on_primary_green</item>
        <item name="colorPrimary">@color/primary_green</item>
        <item name="android:statusBarColor">
            @color/primary_green
        </item>
    </style>

    <style name="Theme.EcoCrafters.CircleImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.EcoCrafters.SpinnersTheme">
        <item name="android:paddingLeft">0dp</item>

        <item name="android:background">@drawable/spinner_background</item>
    </style>

</resources>