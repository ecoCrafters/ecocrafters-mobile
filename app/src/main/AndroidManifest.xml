<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EcoCrafters"
        tools:targetApi="31">
        <activity
            android:name=".ui.scan_result.ScanResultActivity"
            android:exported="false"
            android:label="@string/title_activity_scan_result"
            android:theme="@style/Theme.EcoCrafters" />
        <activity
            android:name=".ui.post.PostActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.UserActivity"
            android:exported="false" />
        <activity
            android:name=".ui.camera.CameraActivity"
            android:exported="false"
            android:label="@string/title_activity_camera"
            android:theme="@style/Theme.EcoCrafters" />
        <activity
            android:name=".ui.edit_account.EditAccountActivity"
            android:exported="false" />
        <activity
            android:name=".ui.change_password.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.check_code.CheckCodeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.myaccount.MyAccountActivity"
            android:exported="false" />
        <activity
            android:name=".ui.starting.StartingActivity"
            android:exported="true"
            android:theme="@style/Theme.EcoCrafters.StartingTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>